    "type": "library",
    "homepage": "https://github.com/aherne/php-mailing-api",
    "keywords": [
        "mailing",
        "oop",
        "dkim",
        "dkim signature",
        "dkim-signature"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Lucian Gabriel Popescu",
            "email": "lucian.gabriel.popescu@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Lucinda\\Mail\\": "src/"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-fileinfo": "*",
        "ext-openssl": "*",
        "ext-mbstring": "*"
    }
}
